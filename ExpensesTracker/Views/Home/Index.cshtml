@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-5 fw-bold text-dark mb-4">Welcome to Expenses Tracker</h1>
    <p class="lead text-muted mb-5">Manage your expenses easily and track your financial health</p>

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Expenses" asp-action="Index" class="btn btn-primary btn-lg px-4">
            View Expenses
        </a>
        <a asp-controller="Expenses" asp-action="Create" class="btn btn-outline-primary btn-lg px-4">
            Add Expense
        </a>
    </div>
</div>
