@model IEnumerable<Expense>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Description</td>
        <td>@item.Amount.ToString("0.00")</td>
        <td>@item.Category</td>
        <td>@item.Date.ToString("yyyy-MM-dd")</td>
        <td class="d-flex gap-1">
            <a asp-controller="Expenses" asp-action="Update" asp-route-itemId="@item.Id" class="btn btn-sm btn-primary">
                Edit <i class="bi bi-pencil"></i>
            </a>

            <form asp-controller="Expenses" asp-action="Delete" asp-route-itemId="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this expense?');">
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete <i class="bi bi-trash"></i>
                </button>
            </form>
        </td>
    </tr>
}

