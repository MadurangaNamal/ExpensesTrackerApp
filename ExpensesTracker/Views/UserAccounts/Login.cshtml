@{
    ViewData["Title"] = "Login";
}


<h2>Login</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Use Google to sign in</h3>
        <form asp-controller="Account" asp-action="GoogleLogin" method="post">
            <button type="submit" class="btn btn-primary">
                <i class="fab fa-google"></i> Sign in with Google
            </button>
        </form>
    </div>
</div>
